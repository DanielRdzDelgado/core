@model IEnumerable<Tienda.Models.Categoria>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container p-3">
   <div class="row pt-4 justify-content-between ">
         <div class="col-6">
             <h2 class="text-primary">Lista de Categorias</h2>
         </div>
         <div class="col-6 d-flex  justify-content-end ">
            <a asp-controller="Categoria" asp-action="Crear" class="btn btn-primary">Nueva categoria</a>
         </div> 
   </div>


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped mt-4">
            <thead>
                <tr>
                    <th>Nombre categoria</th> 
                    <th>Orden</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                   <tr>
                       <td>@item.NombreCategoria</td>
                       <td>@item.MostrarOrden</td>
                   </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>No existen registros actualmente</h1>
    }
</div>
